{
  "compilerOptions":
  {                 
    "allowJs":                true,
    "baseUrl":                "./",
    "checkJs":                true,
    "emitDecoratorMetadata":  true,
    "experimentalDecorators": true,
    "importHelpers":          true,
    "module":                 "es2015",
    "lib":
    [
      "dom",
      "es2015",
      "es2016",
      "es2017"
    ],
    "moduleResolution": "node",
    "sourceMap":        true,
    "strict":           true,
    "target":           "es6",
    "typeRoots":
    [
      "./core/types",
      "../../node_modules/@types"
    ]
  },
  "include": ["./"],
  "exclude": ["./compiler", "../../node_modules"]
}